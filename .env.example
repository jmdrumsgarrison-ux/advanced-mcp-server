# Advanced MCP Server Environment Variables Template
# Copy this file to .env and fill in your actual API keys and configuration

# =============================================================================
# API CREDENTIALS
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Hub
HUGGINGFACE_TOKEN=your_huggingface_token_here

# GitHub API
GITHUB_TOKEN=your_github_token_here

# Google Cloud APIs (for Sheets/Drive)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# Together AI
TOGETHER_API_KEY=your_together_api_key_here

# Grok API
GROK_API_KEY=your_grok_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Master password for credential encryption (optional)
MCP_MASTER_PASSWORD=your_secure_master_password

# Credential storage method: keyring, file, memory, environment
MCP_CREDENTIAL_STORAGE=keyring

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
MCP_LOG_LEVEL=INFO

# Server port (if using TCP mode)
MCP_SERVER_PORT=3000

# Session timeout in minutes
MCP_SESSION_TIMEOUT=60

# Maximum active sessions
MCP_MAX_SESSIONS=10

# =============================================================================
# FILE OPERATIONS
# =============================================================================

# Enable file backups
MCP_BACKUP_ENABLED=true

# Backup directory path
MCP_BACKUP_PATH=./backups/

# Maximum file size for operations (in MB)
MCP_MAX_FILE_SIZE=50

# =============================================================================
# API RATE LIMITING
# =============================================================================

# API timeout in seconds
MCP_API_TIMEOUT=30

# Maximum retries for failed API calls
MCP_MAX_RETRIES=3

# Rate limit: requests per minute
MCP_RATE_LIMIT=60

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================

# Enable debug mode
MCP_DEBUG=false

# Enable performance monitoring
MCP_PERFORMANCE_MONITORING=true

# Enable audit logging
MCP_AUDIT_LOGGING=true

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in the same directory
# 2. Fill in your actual API keys and credentials
# 3. Adjust configuration values as needed
# 4. Never commit .env file to version control
# 5. Keep your API keys secure and private
#
# For Google Cloud APIs:
# - Create a service account in Google Cloud Console
# - Download the JSON credentials file
# - Set GOOGLE_APPLICATION_CREDENTIALS to the full path of that file
#
# For GitHub API:
# - Generate a personal access token in GitHub Settings
# - Grant appropriate scopes for your use case
#
# For other APIs:
# - Check their respective documentation for API key generation
# - Ensure your keys have the necessary permissions for intended operations
